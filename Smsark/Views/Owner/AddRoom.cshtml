@model Smsark.Models.Room


@{
    ViewData["Title"] = "Add Room";
}


<div class="container">

    <div class="booking-form" style="margin:50px 100px 50px 100px; padding-left:60px;">
        <h1 style="color:darkolivegreen">  @ViewData["Title"]</h1>
<form asp-action="AddRoom" method="post">
    <div class="form-group">
        <label style="color:darkolivegreen" asp-for="ApartmentId" class="control-label"></label>
        <input style="width:200px" disabled asp-for="ApartmentId" value="@Model.ApartmentId" class="form-control" />
        <span asp-validation-for="ApartmentId" class="text-danger"></span>
    </div>
            <div class="form-group">
                <label style="color:darkolivegreen" asp-for="RoomId" class="control-label"></label>
                <input style="width:200px" disabled asp-for="RoomId" value="@Model.RoomId" class="form-control" />
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
    <div class="form-group">
        <label style="color:darkolivegreen" asp-for="Beds" class="control-label"></label>
        <input style="width:200px" type="number" asp-for="Beds" class="form-control" />
        <span asp-validation-for="Beds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="AddRoom" class="btn btn-primary" />
    </div>
</form>

        
    </div>
</div>